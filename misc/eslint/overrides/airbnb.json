{
    "indent": [
        "error",
        4,
        {
            "SwitchCase": 1,
            "ignoredNodes": ["TemplateLiteral *"]
        }
    ],
    "max-len": [
        "error",
        120
    ],
    "no-console": [
        "error",
        {
            "allow": [
                "info",
                "warn",
                "error",
                "trace"
            ]
        }
    ],
    "func-style": [
        "error",
        "expression"
    ],
    "func-names": [
        "error",
        "as-needed"
    ],
    "arrow-parens": [
        "error",
        "always"
    ],
    "comma-dangle": [
        "error",
        "never"
    ],
    "quote-props": [
        "error",
        "consistent"
    ],
    "lines-between-class-members": [
        "error",
        "always",
        {
            "exceptAfterSingleLine": true
        }
    ],
    "object-curly-newline": [
        "error",
        {
            "ObjectExpression": {
                "multiline": true,
                "consistent": true
            },
            "ObjectPattern": {
                "multiline": true,
                "consistent": true
            },
            "ImportDeclaration": {
                "multiline": true,
                "consistent": true
            },
            "ExportDeclaration": {
                "multiline": true,
                "consistent": true
            }
        }
    ],
    "no-underscore-dangle": "off"
}
